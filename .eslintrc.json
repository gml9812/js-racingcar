{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions" : "off",
        "max-depth": ["error", 2],
        "max-lines-per-function": ["error", 15],
        "linebreak-style": "off"
    }
}
